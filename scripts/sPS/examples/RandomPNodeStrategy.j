///////////////////////////////////////////////////////////////////////////// This struct represents a simple strategie on PNodes for all// runners who enters this node// We send them random to the next PEdge//// USES://   - General library//   - Path//   - PRunner//   - PRunnerControl//// USED BY://   - PNode//   - PGraphGenerator/////////////////////////////////////////////////////////////////////////////struct RandomPNodeStrategy extends PNodeStrategy  ////////////  // RandomPNodeStrategy  ////////////  //! runtextmacro Singelton("RandomPNodeStrategy")  private static method create takes nothing returns RandomPNodeStrategy    local RandomPNodeStrategy h        //try to allocate    set h = RandomPNodeStrategy.allocate()    if (h == nill) then      call showMessage("Critical Map Error: couldn't allocate a RandomPNodeStrategy.")      return nill    endif        return h  endmethod    // @see PNodeStrategy  public method run takes PNode p, PRunner r returns nothing    local PEdge next    local integer rnd        if(p.edgecount <= 0) then      call showMessage("Critical Map Error: on edge to choose [RandomPNodeStrategy.run].")      return     endif        set rnd = GetRandomInt(0,p.edgecount-1)        set next = p.edges[rnd]    if (next == nill) then      call showMessage("Critical Map Error: no next node [RandomPNodeStrategy.run]")      return    endif           call PRunnerControl.setEdgeObjective(r, next, 1)  endmethod    //=====================================  //=== MUTATORS ========================  //=====================================  //////////endstruct