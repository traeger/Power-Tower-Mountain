struct GoalPNodeStrategy extends PNodeStrategy  ////////////  // GoalPNodeStrategy  ////////////  //! runtextmacro Singelton("GoalPNodeStrategy")  private static method create takes nothing returns GoalPNodeStrategy    local GoalPNodeStrategy h        //try to allocate    set h = GoalPNodeStrategy.allocate()    if (h == nill) then      call showMessage("Critical Map Error: couldn't allocate a GoalPNodeStrategy.")      return nill    endif        return h  endmethod    // @see PNodeStrategy  public method run takes PNode p, PRunner r returns nothing    call KillUnit(r.getUnit())  endmethod    //=====================================  //=== MUTATORS ========================  //=====================================  //////////endstruct